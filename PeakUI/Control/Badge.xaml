<Window x:Class="PeakUI.Control.Badge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeakUI.Control"
        xmlns:peak="clr-namespace:PeakUI.WPF;assembly=PeakUI.WPF"
        mc:Ignorable="d"
        Title="Badge" Height="600" Width="1200">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <WrapPanel Margin="10">
                    <TextBlock FontSize="20">Badge 徽章</TextBlock>
                </WrapPanel>
                <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <peak:Badge peak:Badge.IsShowLittleDot="True" Margin="10"></peak:Badge>
                    <peak:Badge peak:Badge.Text="150" Margin="10"></peak:Badge>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
